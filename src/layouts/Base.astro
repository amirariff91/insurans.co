---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  lang?: string;
  schema?: object;
}

const {
  title,
  description,
  canonical = Astro.url.href,
  ogImage = '/og-default.png',
  lang = 'ms',
  schema,
} = Astro.props;

const siteName = 'Insurans.co';
const fullTitle = title === siteName ? title : `${title} | ${siteName}`;

const navLinks = [
  { href: '/car-insurance/', label: 'Kereta', labelEn: 'Car' },
  { href: '/health-insurance/', label: 'Kesihatan', labelEn: 'Health' },
  { href: '/life-insurance/', label: 'Nyawa', labelEn: 'Life' },
  { href: '/takaful/', label: 'Takaful', labelEn: 'Takaful' },
  { href: '/companies/', label: 'Syarikat', labelEn: 'Companies' },
];
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{fullTitle}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonical} />

  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonical} />
  <meta property="og:site_name" content={siteName} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:locale" content="ms_MY" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={fullTitle} />
  <meta name="twitter:description" content={description} />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  {schema && (
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}

  <!-- Organization schema on every page -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Insurans.co",
    "url": "https://insurans.co",
    "description": "Panduan insurans Malaysia â€” harga sebenar, perbandingan syarikat, dan panduan dalam Bahasa Malaysia.",
    "inLanguage": ["ms", "en"],
    "knowsAbout": ["Insurance", "Takaful", "Car Insurance Malaysia", "Health Insurance Malaysia", "Insurans Kereta", "Insurans Kesihatan"],
    "areaServed": {
      "@type": "Country",
      "name": "Malaysia"
    }
  })} />
</head>
<body class="min-h-screen flex flex-col">
  <!-- Header -->
  <header class="bg-white border-b border-stone-200 sticky top-0 z-50">
    <div class="container-wide">
      <!-- Top bar -->
      <div class="flex items-center justify-between h-14 sm:h-16">
        <!-- Logo -->
        <a href="/" class="flex items-baseline gap-1.5 group">
          <span class="font-serif text-xl sm:text-2xl text-stone-900 group-hover:text-hijau-700 transition-colors">insurans</span>
          <span class="font-serif text-xl sm:text-2xl text-hijau-600">.co</span>
        </a>

        <!-- Desktop nav -->
        <nav class="hidden md:flex items-center gap-1">
          {navLinks.map(link => (
            <a
              href={link.href}
              class="px-3 py-2 text-sm font-medium text-stone-600 hover:text-stone-900 hover:bg-stone-50 rounded transition-colors"
            >
              {link.label}
            </a>
          ))}
        </nav>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 -mr-2 text-stone-600 hover:text-stone-900"
          aria-label="Menu"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-stone-200 bg-white">
      <nav class="container-wide py-3 space-y-1">
        {navLinks.map(link => (
          <a
            href={link.href}
            class="block py-2.5 px-3 text-sm font-medium text-stone-700 hover:text-hijau-700 hover:bg-hijau-50 rounded transition-colors"
          >
            {link.label}
            <span class="text-stone-400 ml-1.5 text-xs">{link.labelEn}</span>
          </a>
        ))}
      </nav>
    </div>
  </header>

  <main class="flex-1">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-stone-900 text-stone-400 mt-16 sm:mt-20">
    <div class="container-wide py-10 sm:py-14">
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-8 sm:gap-6">
        <!-- Insurans -->
        <div>
          <h3 class="text-stone-200 font-sans font-semibold text-sm mb-4">Insurans</h3>
          <ul class="space-y-2.5 text-sm">
            <li><a href="/car-insurance/" class="hover:text-white transition-colors">Insurans Kereta</a></li>
            <li><a href="/motorcycle-insurance/" class="hover:text-white transition-colors">Insurans Motosikal</a></li>
            <li><a href="/health-insurance/" class="hover:text-white transition-colors">Insurans Kesihatan</a></li>
            <li><a href="/life-insurance/" class="hover:text-white transition-colors">Insurans Nyawa</a></li>
            <li><a href="/travel-insurance/" class="hover:text-white transition-colors">Insurans Travel</a></li>
          </ul>
        </div>

        <!-- Takaful -->
        <div>
          <h3 class="text-stone-200 font-sans font-semibold text-sm mb-4">Takaful</h3>
          <ul class="space-y-2.5 text-sm">
            <li><a href="/takaful/" class="hover:text-white transition-colors">Apa Itu Takaful?</a></li>
            <li><a href="/takaful/car/" class="hover:text-white transition-colors">Takaful Kereta</a></li>
            <li><a href="/takaful/health/" class="hover:text-white transition-colors">Takaful Kesihatan</a></li>
          </ul>
        </div>

        <!-- Syarikat -->
        <div>
          <h3 class="text-stone-200 font-sans font-semibold text-sm mb-4">Syarikat</h3>
          <ul class="space-y-2.5 text-sm">
            <li><a href="/companies/etiqa/" class="hover:text-white transition-colors">Etiqa</a></li>
            <li><a href="/companies/allianz/" class="hover:text-white transition-colors">Allianz</a></li>
            <li><a href="/companies/tokio-marine/" class="hover:text-white transition-colors">Tokio Marine</a></li>
            <li><a href="/companies/zurich/" class="hover:text-white transition-colors">Zurich</a></li>
            <li><a href="/companies/" class="hover:text-white transition-colors">Semua syarikat â†’</a></li>
          </ul>
        </div>

        <!-- Panduan -->
        <div>
          <h3 class="text-stone-200 font-sans font-semibold text-sm mb-4">Panduan</h3>
          <ul class="space-y-2.5 text-sm">
            <li><a href="/guides/ncd-explained/" class="hover:text-white transition-colors">NCD Explained</a></li>
            <li><a href="/guides/renew-car-insurance/" class="hover:text-white transition-colors">Renew Insurans Online</a></li>
            <li><a href="/guides/how-to-claim/" class="hover:text-white transition-colors">Cara Buat Claim</a></li>
            <li><a href="/tools/ncd-calculator/" class="hover:text-white transition-colors text-hijau-400">ðŸ§® Kalkulator NCD</a></li>
          </ul>
        </div>
      </div>

      <div class="border-t border-stone-800 mt-10 pt-8">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
          <div>
            <a href="/" class="font-serif text-lg text-stone-300 hover:text-white transition-colors">
              insurans<span class="text-hijau-400">.co</span>
            </a>
            <p class="text-xs text-stone-500 mt-1">Panduan insurans untuk rakyat Malaysia.</p>
          </div>
          <p class="text-xs text-stone-500 max-w-md">
            Penafian: Laman ini menyediakan maklumat am sahaja, bukan nasihat kewangan.
            Sila rujuk ejen insurans berlesen untuk nasihat khusus.
          </p>
        </div>
        <p class="text-xs text-stone-600 mt-6">Â© 2026 Insurans.co</p>
      </div>
    </div>
  </footer>

  <script>
    document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
      document.getElementById('mobile-menu')?.classList.toggle('hidden');
    });
  </script>
</body>
</html>
